<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card Generator"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

    <Button
        android:id="@+id/home_btnHappyBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Happy Birthday Card" />

    <Button
        android:id="@+id/home_btnLoveCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Love Card" />

    <Button
        android:id="@+id/home_btnChristmas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merry Christmas Card" />

    <Button
        android:id="@+id/home_btnNewYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Year Card" />

    <Button
        android:id="@+id/home_btnHalloween"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Halloween Card" />
</LinearLayout>